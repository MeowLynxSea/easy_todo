DATABASE_URL=sqlite://./sync.db
HOST=127.0.0.1
PORT=8787

# Auth
# OAuth login + sync server issues access/refresh tokens
BASE_URL=http://127.0.0.1:8787
JWT_ISSUER=easy_todo_sync_server
JWT_SECRET=change-me
TOKEN_PEPPER=change-me
APP_REDIRECT_ALLOWLIST=easy_todo://auth,http://localhost:8080/
# Optional allowlist of enabled providers (comma-separated). If unset, all configured providers are enabled.
# AUTH_PROVIDERS=linuxdo

# OAuth providers (configure at least one)
# JSON array; each provider must define authorizeUrl/tokenUrl/userinfoUrl and how to extract user id.
# If you set this via shell/systemd, wrap the entire JSON in single quotes to preserve inner quotes.
OAUTH_PROVIDERS_JSON=[{"name":"my_provider","authorizeUrl":"https://provider.example.com/oauth/authorize","tokenUrl":"https://provider.example.com/oauth/token","userinfoUrl":"https://provider.example.com/oauth/userinfo","clientId":"...","clientSecret":"...","scope":"","idField":"id","accessTokenField":"access_token","tokenAuthMethod":"basic","extraAuthorizeParams":{},"extraTokenParams":{}}]

# Linux.do example
# AUTH_PROVIDERS=linuxdo
# OAUTH_PROVIDERS_JSON=[{"name":"linuxdo","authorizeUrl":"https://connect.linux.do/oauth2/authorize","tokenUrl":"https://connect.linux.do/oauth2/token","userinfoUrl":"https://connect.linux.do/api/user","clientId":"...","clientSecret":"...","scope":"","idField":"id","accessTokenField":"access_token","tokenAuthMethod":"basic","extraAuthorizeParams":{},"extraTokenParams":{}}]

# Ops
MAX_PUSH_RECORDS=500
# Optional quotas (set per your deployment)
# MAX_RECORDS_PER_USER=20000
# MAX_TOTAL_B64_PER_USER=200000000
